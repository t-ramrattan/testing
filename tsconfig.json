  
{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "lib",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "filesGlob": [
        "*.ts"
    ],
    "include": [
        "src"
    ],
    "compileOnSave": false
}
